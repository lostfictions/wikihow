{
  "name": "wikihowbot",
  "version": "1.0.0",
  "description": "a bot that posts random wikihow images to mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node --enable-source-maps dist/main.js",
    "dev": "ts-node --transpile-only src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --pretty --noEmit",
    "test:lint": "eslint --color 'src/**/*.{mjs,js,ts,jsx,tsx}' --max-warnings=0",
    "test:prettier": "prettier 'src/**/*.{mjs,js,ts,jsx,tsx}' -l",
    "prettier": "prettier 'src/**/*.{mjs,js,ts,jsx,tsx}' --write"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sentry/integrations": "^7.2.0",
    "@sentry/node": "^7.2.0",
    "axios": "^0.25.0",
    "canvas": "^2.9.0",
    "cheerio": "^0.22.0",
    "twoot": "^0.1.3",
    "wordfilter": "^0.2.6",
    "znv": "^0.3.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.22",
    "@types/node": "^16.11.41",
    "dotenv": "^14.2.0",
    "eslint": "^8.18.0",
    "eslint-config-lostfictions": "^3.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">16.9.1"
  }
}
