{
  "name": "wikihowbot",
  "version": "1.0.0",
  "description": "a bot that posts random wikihow images to mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node --enable-source-maps dist/main.js",
    "dev": "ts-node --transpile-only src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --pretty --noEmit",
    "test:lint": "eslint --color 'src/**/*.{mjs,js,ts,jsx,tsx}' --max-warnings=0",
    "test:prettier": "prettier 'src/**/*.{mjs,js,ts,jsx,tsx}' -l",
    "prettier": "prettier 'src/**/*.{mjs,js,ts,jsx,tsx}' --write"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sentry/integrations": "^6.16.1",
    "@sentry/node": "^6.16.1",
    "async-retry": "^1.3.3",
    "axios": "^0.25.0",
    "canvas": "^2.9.0",
    "cheerio": "^0.22.0",
    "envalid": "^6.0.2",
    "masto": "^4.1.14",
    "nanoid": "^3.2.0",
    "twitter-api-client": "^1.3.8",
    "wordfilter": "^0.2.6"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/cheerio": "0.22.22",
    "@types/node": "^16.11.21",
    "eslint": "^8.7.0",
    "eslint-config-lostfictions": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">16.9.1"
  }
}
