{
  "name": "wikihowbot",
  "version": "1.0.0",
  "description": "a bot that posts random wikihow images to mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only --notify=false src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-s -l test:*",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint --color 'src/**/*'",
    "test:prettier": "prettier 'src/**/*.{js,ts,jsx,tsx}' -l",
    "prettier": "prettier 'src/**/*.{js,ts,jsx,tsx}' --write"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sentry/integrations": "^6.16.1",
    "@sentry/node": "^6.16.1",
    "async-retry": "^1.3.3",
    "axios": "^0.21.4",
    "canvas": "^2.8.0",
    "cheerio": "^0.22.0",
    "envalid": "^6.0.2",
    "masto": "^4.1.14",
    "nanoid": "^3.1.25",
    "source-map-support": "^0.5.21",
    "twitter-api-client": "^1.3.8",
    "wordfilter": "^0.2.6"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/cheerio": "0.22.22",
    "@types/node": "^16.9.4",
    "eslint": "^8.5.0",
    "eslint-config-lostfictions": "^3.0.0-beta.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": "^16.9.1"
  }
}
