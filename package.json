{
  "name": "wikihowbot",
  "version": "1.0.0",
  "description": "a bot that posts random wikihow images to mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node --enable-source-maps dist/main.js",
    "dev": "ts-node -T src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --pretty --noEmit",
    "test:lint": "eslint --color 'src/**/*.{mjs,js,ts,jsx,tsx}' --max-warnings=0",
    "test:prettier": "prettier 'src/**/*.{mjs,js,ts,jsx,tsx}' -l",
    "prettier": "prettier 'src/**/*.{mjs,js,ts,jsx,tsx}' --write"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sentry/integrations": "^7.30.0",
    "@sentry/node": "^7.30.0",
    "axios": "^1.1.3",
    "canvas": "^2.10.1",
    "cheerio": "^1.0.0-rc.12",
    "twoot": "^0.2.1",
    "wordfilter": "^0.2.6",
    "znv": "^0.3.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.66",
    "dotenv": "^14.2.0",
    "eslint": "^8.31.0",
    "eslint-config-lostfictions": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.18.0"
  }
}
