{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": [
      "es2021"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "dist",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ]
}
